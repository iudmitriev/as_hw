{
    "name": "deepspeech2_200_epochs",
    "n_gpu": 1,
    "preprocessing": {
      "sr": 16000,
      "spectrogram": {
        "type": "MelSpectrogram",
        "args": {
        }
      },
      "log_spec": true
    },
    "augmentations": {
      "wave": [],
      "spectrogram": []
    },
    "arch": {
      "type": "DeepSpeech2Model",
      "args": {
        "n_feats": 128,
        "bidirectional": true
      }
    },
    "text_encoder": {
        "type": "CTCCharTextEncoderWithLM",
        "args": {
            "alpha": 0.5,
            "beta" : 1
        }
    },
    "data": {
      "train": {
        "batch_size": 6,
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "train-clean-100",
              "max_audio_length": 20.0,
              "max_text_length": 300
            }
          },
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "train-clean-360",
              "max_audio_length": 20.0,
              "max_text_length": 300
            }
          },
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "train-other-500",
              "max_audio_length": 20.0,
              "max_text_length": 300
            }
          }
        ]
      },
      "val": {
        "batch_size": 6,
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "dev-clean",
              "limit": 10
            }
          }
        ]
      },
      "test-other": {
        "batch_size": 6,
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "test-other",
              "limit": 10
            }
          }
        ]
      },
      "test-clean": {
        "batch_size": 6,
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "test-clean",
              "limit": 10
            }
          }
        ]
      }
    },
    "optimizer": {
      "type": "AdamW",
      "args": {
        "lr": 3e-4
      }
    },
    "loss": {
      "type": "CTCLoss",
      "args": {}
    },
    "metrics": [
      {
        "type": "WERMetricWithLM",
        "args": {
          "name": "WER (with LM)"
        }
      },
      {
        "type": "CERMetricWithLM",
        "args": {
          "name": "CER (with LM)"
        }
      }
    ],
    "lr_scheduler": {
      "type": "OneCycleLR",
      "args": {
        "steps_per_epoch": 100,
        "epochs": 100,
        "anneal_strategy": "cos",
        "max_lr": 3e-4,
        "pct_start": 0.2
      }
    },
    "trainer": {
      "epochs": 100,
      "save_dir": "saved/",
      "save_period": 5,
      "verbosity": 2,
      "monitor": "min val_loss",
      "early_stop": 500,
      "visualize": "wandb",
      "wandb_project": "asr_project",
      "len_epoch": 100,
      "grad_norm_clip": 10
    }
  }
  